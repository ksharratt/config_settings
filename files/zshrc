# Enable Powerlevel10k instant prompt. Should stay close to the top of ~/.zshrc.
# Initialization code that may require console input (password prompts, [y/n]
# confirmations, etc.) must go above this block; everything else may go below.
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

. "$HOME/.local/bin/env"

# --- Core options for a nicer shell ---
setopt autocd              # `..` just works
setopt correct             # typo correction for commands
setopt extendedglob        # powerful globbing: ** ^~() etc.
setopt globdots            # match dotfiles without leading .
setopt nocaseglob          # case-insensitive globs
setopt hist_ignore_all_dups share_history inc_append_history_time

# History
HISTFILE=~/.zsh_history
HISTSIZE=200000
SAVEHIST=200000


# --- normal zsh completion on Tab ---
autoload -Uz compinit; compinit -C
bindkey '^I' expand-or-complete        # Tab = regular completion

# Insert the unambiguous part immediately
zstyle ':completion:*' insert-unambiguous yes

# If there are multiple matches:
# - show a menu only on the 2nd Tab press, and let you cycle
setopt AUTO_MENU                       # start menu on 2nd Tab
setopt AUTO_LIST                       # show list when ambiguous
zstyle ':completion:*' menu select=1

# Completion system
zstyle ':completion:*' use-cache on
zstyle ':completion:*' completer _complete _ignored
zstyle ':completion:*' menu select

# FZF (if installed)
[ -f /usr/share/doc/fzf/examples/key-bindings.zsh ] && \
  source /usr/share/doc/fzf/examples/key-bindings.zsh
[ -f /usr/share/doc/fzf/examples/completion.zsh ] && \
  source /usr/share/doc/fzf/examples/completion.zsh

# Oh My Zsh
export ZSH="$HOME/.oh-my-zsh"
plugins=(
  git
  python pip virtualenv
  ansible
)


# Prompt (Powerlevel10k) â€“ optional but great
# git clone --depth=1 https://github.com/romkatv/powerlevel10k.git \
#   ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/themes/powerlevel10k
ZSH_THEME="powerlevel10k/powerlevel10k"

# load oh my zsh after zsh theme set, or it overwrites the theme
source "$ZSH/oh-my-zsh.sh"

# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh

# Autosuggestions & Syntax highlighting (install once via git clone)
[[ -r ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/plugins/zsh-autosuggestions/zsh-autosuggestions.zsh ]] && \
  source ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/plugins/zsh-autosuggestions/zsh-autosuggestions.zsh
[[ -r ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/plugins/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh ]] && \
  source ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/plugins/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh

# Python quality-of-life
export PIP_DISABLE_PIP_VERSION_CHECK=1
export UV_LINK_MODE=copy  # helpful on WSL/mixed filesystems; safe elsewhere
# Show active venv in prompt (p10k does this automatically)

# Ansible completions (if installed)
# eval "$(python -m argcomplete 2>/dev/null)"  # or source distro completions

# Handy aliases
alias ll='ls -lah'
alias gs='git status -sb'
alias ga='git add -A'
alias gp='git pull --rebase --autostash'
alias gpf='git push --force-with-lease'
alias vi=nvim
alias tui=taskwarrior-tui

export EDITOR=nvim
export PATH="/snap/bin:/var/lib/snapd/snap/bin:$PATH"

bindkey '^[[Z' forward-char

eval "$(uv generate-shell-completion zsh)"
eval "$(uvx --generate-shell-completion zsh)"
